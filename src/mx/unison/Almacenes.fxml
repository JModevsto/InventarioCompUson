<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="560.0" prefWidth="800.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mx.unison.AlmacenesController">
    <stylesheets>
        <URL value="@almacenes.css" />
    </stylesheets>
   <children>
      <HBox fx:id="bottomBar" layoutY="498.0" prefHeight="62.0" prefWidth="800.0">
         <children>
            <AnchorPane prefHeight="62.0" prefWidth="801.0">
               <children>
                  <Button fx:id="btnAgregar" layoutX="162.0" layoutY="10.0" mnemonicParsing="false" onAction="#handleAgregarAlmacen" prefHeight="42.0" prefWidth="150.0" text="Agregar" />
                  <Button fx:id="btnModificar" layoutX="326.0" layoutY="10.0" mnemonicParsing="false" onAction="#handleModificarAlmacen" prefHeight="42.0" prefWidth="150.0" text="Modificar" />
                  <Button fx:id="btnEliminar" layoutX="488.0" layoutY="10.0" mnemonicParsing="false" onAction="#handleEliminarAlmacen" prefHeight="42.0" prefWidth="150.0" text="Eliminar" />
               </children>
            </AnchorPane>
         </children>
      </HBox>
      <TableView fx:id="tblAlmacenes" layoutX="12.0" layoutY="82.0" prefHeight="417.0" prefWidth="777.0">
        <columns>
          <TableColumn fx:id="colID" prefWidth="26.0" text="ID" />
          <TableColumn fx:id="colNombre" prefWidth="380.0" text="Nombre" />
            <TableColumn fx:id="colFechaCreacion" minWidth="0.0" prefWidth="113.0" text="Creación" />
            <TableColumn fx:id="colFechaModificacion" prefWidth="109.0" text="Ult. Modificación" />
            <TableColumn fx:id="colUltimoUsuario" minWidth="0.0" prefWidth="146.0" text="Ult. Usuario" />
        </columns>
      </TableView>
      <Button fx:id="btnVolver" layoutX="23.0" layoutY="28.0" mnemonicParsing="false" onAction="#handleVolverInicio" prefHeight="31.0" prefWidth="73.0" text="Volver">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <ComboBox fx:id="cmbAlmacenFiltro" layoutX="524.0" layoutY="35.0" prefWidth="150.0" />
      <TextField fx:id="txtID" layoutX="467.0" layoutY="35.0" prefHeight="25.0" prefWidth="38.0" />
      <Label layoutX="447.0" layoutY="39.0" text="ID" />
      <Button fx:id="btnAplicarFiltros" layoutX="690.0" layoutY="12.0" mnemonicParsing="false" onAction="#handleAplicarFiltros" prefHeight="62.0" prefWidth="91.0" text="Aplicar Filtros" textAlignment="CENTER" wrapText="true" />
   </children>
</AnchorPane>
